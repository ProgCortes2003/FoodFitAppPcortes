<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btn_salir_app"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icono_salir"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circular_button"
        app:layout_constraintVertical_bias="0.025"
        app:layout_constraintHorizontal_bias="0.025"
        />

    <TextView
        android:id="@+id/titulo_menu_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="Food fit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/opciones_menu_principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1"
        ></TextView>


    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/titulo_menu_principal"
        app:layout_constraintBottom_toBottomOf="@+id/opciones_menu_principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Encuentra las mejores recetas para manterner una vida saludable a lo largo de todas las comidas del dÃ­a."
        app:layout_constraintVertical_bias="0.25"
        ></TextView>

    <GridLayout
        android:id="@+id/opciones_menu_principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_comidaManiana"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="20dp"
            android:layout_columnSpan="1"
            android:layout_rowWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icono_maniana"
                        ></ImageView>

                </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_comidaMediodia"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icono_mediodia"
                    ></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_comidaNoche"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icono_noche"
                    ></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_calculadoraIMC"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icono_calculadora"
                    ></ImageView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>